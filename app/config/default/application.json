{
  "site": {
    "name": "Erdiko",
    "full_name": "Erdiko Micro Framework",
    "tagline": "Enterprise Glue (PHP Micro Framework)",
    "copyright": "Copyright Â© 2016",
    "description": "Erdiko wants to make your php development easier. If you need a lightweight MVC framework you have come to the right place. Our goal is to offer a clean framework to create sites optimized for mobile devices, APIs and multiple browsers.",
    "meta": {
      "description": "Erdiko MVC micro framework (enterprise glue)"
    },
    "debug": 1
  },
  "theme": {
    "name": "bootstrap",
    "namespace": "/app/themes/bootstrap",
    "public": "/public/themes/bootstrap",
    "defaults": {
      "layout": {
        "columns": 1
      },
      "home_url": "/"
    }
  },
  "menu": {
    "main": [
    {
      "href": "/users/login",
      "title": "Login"
    }, {
      "href": "/dashboard",
      "title": "Dashboard"
    }, {
      "href": "/users/logout",
      "title": "Logout"
    }, {
      "href": "/users",
      "title": "Users"
    }],
    "footer": [{
      "href": "/",
      "title": "home"
    }, {
      "href": "/examples/config",
      "title": "view config"
    }, {
      "href": "/examples/about",
      "title": "about"
    }]
  },
  "logs": {
    "name": "default",
    "path": "/var/logs",
    "files": [{
      "default": "system.log",
      "exception": "exception.log"
    }]
  },
  "cache": {
    "default": {
      "type": "File",
      "class": "\erdiko\core\cache\File",
      "path": "/var/cache"
    },
    "memcached": {
      "type": "Memcached",
      "class": "\erdiko\core\cache\Memcached"
    }
  },
  "google": {
    "analytics": {
      "tracking_id": ""
    },
    "tag_manager": []
  }
}
