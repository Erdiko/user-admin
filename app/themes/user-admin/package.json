{
  "name": "erdiko-user-admin",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A fully functional and modular user management system with an Angular 2 UI.",
  "repository": {
    "type": "git",
    "url": "https://github.com/erdiko/user-admin"
  },
  "public": false,
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "build:prod": "ng build --prod --bh /dashboard/",
    "build:clean": "rm -f ../../../public/default/themes/user-admin/js/inline.js ../../../public/default/themes/user-admin/js/styles* ../../../public/default/themes/user-admin/js/main*",
    "build:sass": "node-sass --include-path styles styles/styles.scss ./styles-dist/styles.css && cleancss -o ../../../public/default/themes/user-admin/css/styles.min.css ./styles-dist/styles.css",
    "build:copy": "cp ./dist/*.js* ../../../public/default/themes/user-admin/js/",
    "build:copycss": "cp ./dist/*.css* ../../../public/default/themes/user-admin/css/",
    "build:rename": "mv ./dist/main.*.bundle.js ./dist/main.bundle.js && mv ./dist/inline.*.bundle.js ./dist/inline.bundle.js && mv ./dist/vendor.*.bundle.js ./dist/vendor.bundle.js && mv ./dist/styles.*.bundle.css ./dist/app.bundle.css",
    "build": "npm run build:sass && npm run build:prod && npm run build:clean && npm run build:rename && npm run build:copy && npm run build:copycss"
  },
  "dependencies": {
    "@angular/common": "^2.3.1",
    "@angular/compiler": "^2.3.1",
    "@angular/core": "^2.3.1",
    "@angular/forms": "^2.3.1",
    "@angular/http": "^2.3.1",
    "@angular/platform-browser": "^2.3.1",
    "@angular/platform-browser-dynamic": "^2.3.1",
    "@angular/router": "^3.3.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.2",
    "@erdiko/ng-user-admin": "^1.1.6"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.3.1",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.42",
    "angular-cli": "1.0.0-beta.24",
    "bootstrap": "^4.0.0-alpha.5",
    "bootstrap-sass": "^3.3.7",
    "bootswatch-sass": "^3.2.0",
    "codelyzer": "~2.0.0-beta.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "ngx-bootstrap": "^1.6.6",
    "node-sass": "^4.1.1",
    "protractor": "~4.0.13",
    "ts-node": "1.2.1",
    "tslint": "^4.0.2",
    "typescript": "~2.0.3"
  }
}
